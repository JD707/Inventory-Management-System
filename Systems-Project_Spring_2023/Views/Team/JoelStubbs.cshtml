<link rel="stylesheet" href="~/css/team.css" asp-append-version="true" />

<div class="container text-center about-card">
	<div class="row">
		<div class="col-md-6 col-sm-12">
			<img alt="Image of Joel Stubbs" class="img-fluid" src="~/Images/JoelStubbs.jpg">
