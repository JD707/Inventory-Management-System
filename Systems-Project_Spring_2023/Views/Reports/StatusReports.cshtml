            </tr>
        </thead>
        <tbody>
            @foreach (var kit in Model.kitdetails)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => kit.Kit_id)</td>
                    <td>@Html.DisplayFor(modelItem => kit.Kit_barcd)</td>
                    <td>@Html.DisplayFor(modelItem => kit.Kit_name)</td>
                    <td>@Html.DisplayFor(modelItem => kit.Kit_type)</td>
                    <td>@Html.DisplayFor(modelItem => kit.Kit_cost)</td>
                    <td>@Html.DisplayFor(modelItem => kit.Kit_date)</td>
