@model IEnumerable<Systems_Project_Spring_2023.Models.Kit_Type>

@{
    ViewData["Title"] = "Index";
}
<div class="container"> 
    
    <h1>Index</h1>

    <p>
        <a class="btn btn-primary btn-md" asp-controller="Kit_Type" asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Kt_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Kt_cost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Kt_date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Kt_desc)
                </th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Kt_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kt_cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kt_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kt_desc)
                </td>
                <td>
                    <a class="btnIndex" asp-action="Edit" asp-route-id="@item.Kt_id">Edit</a> |
                    <a class="btnIndex" asp-action="Details" asp-route-id="@item.Kt_id">Details</a> |
                    <a class="btnIndex" asp-action="Delete" asp-route-id="@item.Kt_id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
