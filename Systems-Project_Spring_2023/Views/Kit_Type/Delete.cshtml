@model Systems_Project_Spring_2023.Models.Kit_Type

@{
    ViewData["Title"] = "Delete Kit Type";
}


<hr class="hr-w hr-w-3" />

<div class="container">
    <h1 class="pb-3 mb-4 border-bottom">Delete Kit Type</h1>

    <hr class="hr-w hr-w-4" />

    <dl class="row">
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Kt_name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Kt_name)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Kt_cost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Kt_cost)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Kt_date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Kt_date)
        </dd>
    </dl>
    
    <form id="deleteForm" asp-action="Delete" onsubmit="return confirmDelete()">
        <input type="hidden" asp-for="Kt_id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>

</div>

<hr class="hr-w hr-w-3" />

<script>
    function confirmDelete() {
        if (confirm("Are you sure you want to delete this kit type?")) {
            return true;
        } else {
            return false;
        }
    }
</script>