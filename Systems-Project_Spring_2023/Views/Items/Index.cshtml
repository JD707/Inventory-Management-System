@model IEnumerable<Systems_Project_Spring_2023.Models.Item>

@{
    ViewData["Title"] = "Item Management";
}

<hr class="hr-w hr-w-3" />

<div class="container">
    <h1 class="pb-3 mb-4 border-bottom">Item Management</h1>
    <a class="btn btn-primary" asp-controller="Home" asp-action="InventoryManagement">Back</a>
    <a class="btn btn-primary btn-md btn-fix" asp-action="Create">Create New Item</a>

    <hr class="hr-w hr-w-5" />
    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Item_barcode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Item_name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Item_cost)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Item_date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Item_note)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status_code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student_macid)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item_barcode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item_cost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item_date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item_note)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status_code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student_macid)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Item_id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Item_id">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>

<hr class="hr-w hr-w-3" />